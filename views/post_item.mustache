<li id="post{{ post_id }}" class="post">
    <div class="post_heading">
        <span class="username"><a href="{{ profile_link }}">{{ username }}</a></span>
        <span class="fullname">{{ fullname }}</span>
        <span class="timestamp">{{ timestamp }}</span>
    </div>
    <div class="post_body">
        <p class="content">{{ content }}</p>
    </div>
    <div class="post_foot">
        <span class="haters">{{{ haters_markup }}}</span>
        <span class="delete">{{{ delete_markup }}}</span>
    </div>
</li>